# Engine Service Environment Variables

# Database
DATABASE_URL=postgres://engine:engine@postgres:5432/readallaboutit

# OpenAI
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini

# WordPress
WP_URL=http://wordpress
WP_USERNAME=admin
WP_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx-xxxx-xxxx

# Publishing
PUBLISH_MODE=draft
DAILY_PUBLISH_LIMIT=10

# Safety
SAFE_TOPICS_ONLY=true

# Scheduler
CRON_SCHEDULE=0 */4 * * *

# Logging
LOG_LEVEL=info
NODE_ENV=development
