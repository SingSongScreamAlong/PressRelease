# =============================================================================
# ReadAllAboutIt - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# WordPress Database (MariaDB)
# -----------------------------------------------------------------------------
WP_DB_USER=wordpress
WP_DB_PASSWORD=wordpress
WP_DB_NAME=wordpress
WP_DB_ROOT_PASSWORD=rootpassword
WP_PORT=8080

# -----------------------------------------------------------------------------
# PostgreSQL (Engine Database)
# -----------------------------------------------------------------------------
POSTGRES_USER=engine
POSTGRES_PASSWORD=engine
POSTGRES_DB=readallaboutit
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# OpenAI API
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# WordPress REST API
# -----------------------------------------------------------------------------
# For local development, use: http://wordpress
# For remote WordPress, use the full URL: https://your-site.com
WP_URL=http://wordpress
WP_USERNAME=admin
# Generate Application Password in WordPress: Users > Your Profile > Application Passwords
WP_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx-xxxx-xxxx

# -----------------------------------------------------------------------------
# Engine Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development

# Publishing mode: 'draft' or 'publish'
PUBLISH_MODE=draft

# Maximum posts to publish per day (throttling)
DAILY_PUBLISH_LIMIT=10

# Block YMYL (Your Money Your Life) topics entirely
SAFE_TOPICS_ONLY=true

# Cron schedule (default: every 4 hours)
CRON_SCHEDULE=0 */4 * * *

# Logging level: debug, info, warn, error
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Optional: Adminer (Database Inspector)
# -----------------------------------------------------------------------------
ADMINER_PORT=8081
